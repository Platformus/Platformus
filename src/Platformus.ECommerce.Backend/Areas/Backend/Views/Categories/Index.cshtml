@model Platformus.ECommerce.Backend.ViewModels.Categories.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Categories"];
  this.ViewBag.ActiveMenuItem = "categories";
}
<title-bar />
<tree>
  @foreach (var category in this.Model.Categories)
  {
    <partial name="_Category" for="@category" />
  }
  <node>
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/categories/create">@Localizer["Create category"]</neutral-button>
    </node-controls>
  </node>
</tree>