@model Platformus.ECommerce.Backend.ViewModels.Categories.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Categories"];
  this.ViewBag.ActiveMenuItem = "categories";
}
@section title {
  @ViewBag.Title
}
<tree class="master-detail__tree">
  @foreach (var category in this.Model.Categories)
  {
    <partial name="_Category" for="@category" />
  }
  <tree-node>
    <tree-node-buttons>
      <positive-button is-minor="true" href="/backend/categories/create">@Localizer["Create category"]</positive-button>
    </tree-node-buttons>
  </tree-node>
</tree>