@model Platformus.ECommerce.Backend.ViewModels.PaymentMethods.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Payment Methods"];
  this.ViewBag.ActiveMenuItem = "paymentmethods";
}
@section title {
  @ViewBag.Title <span class="master-detail__detail-header-counter">@Model.Grid.Pager.Total</span>
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="@this.Context.Request.CombineUrl("/backend/paymentmethods/create")">@Localizer["Create payment method"]</a>
</div>