@model Platformus.ECommerce.Backend.ViewModels.ECommerce.CategorySelectorFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="pop-up-form__title heading heading--h1">
  @Localizer["Category Selector"]
</div>
<div class="pop-up-form__content">
  <div class="item-selector-pop-up-form__items">
    <table class="item-selector-pop-up-form__table">
      <columns>
        <column label="@Localizer["Name"].Value" />
      </columns>
      <rows>
        @foreach (var category in this.Model.Categories)
        {
          <row class="table__row--interactive@(category.Id == this.Model.CategoryId ? " table__row--selected" : null)" data-item-value="@category.Id">
            <cell>@category.Name</cell>
          </row>
        }
      </rows>
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <positive-button onclick="return platformus.forms.categorySelectorForm.select();">@Localizer["Select"]</positive-button>
    <neutral-button onclick="return platformus.forms.categorySelectorForm.hideAndRemove();">@Localizer["Cancel"]</neutral-button>
  </div>
</div>