@model Platformus.ECommerce.Backend.ViewModels.ECommerce.ProductSelectorFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="pop-up-form__header">
  @Localizer["Product Selector"]
</div>
<div class="pop-up-form__content">
  <div class="item-selector-pop-up-form__items">
    <table class="item-selector-pop-up-form__table table">
      <tr class="table__row">
        @foreach (var gridColumn in this.Model.GridColumns)
        {
          <th class="table__cell table__cell--header">@gridColumn.DisplayName</th>
        }
      </tr>
      @foreach (var product in this.Model.Products)
      {
        <tr class="table__row @(product.Id == this.Model.ProductId ? "table__row--selected" : null)" data-item-value="@product.Id">
          <td class="item-selector-pop-up-form__cell table__cell">@product.Category.Name</td>
          <td class="item-selector-pop-up-form__cell table__cell">@product.Name</td>
        </tr>
      }
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <button class="buttons__button button button--positive" onclick="return platformus.forms.productSelectorForm.select();">@Localizer["Select"]</button>
    <button class="buttons__button button button--neutral" onclick="return platformus.forms.productSelectorForm.hideAndRemove();">@Localizer["Cancel"]</button>
  </div>
</div>