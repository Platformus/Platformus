@model Platformus.ECommerce.Backend.ViewModels.OrderStates.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Order State"].Value : this.Localizer["Edit Order State"].Value);
  this.ViewBag.ActiveMenuItem = "orderstates";
}
@section title {
  @ViewBag.Title
}
<form class="master-detail__form form" method="post">
  <single-line-text-field for="Code" />
  <multilingual-single-line-text-field for="Name" localizations="this.Model.NameLocalizations" />
  <numeric-field for="Position" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/orderstates">@Localizer["Cancel"]</neutral-button>
  </div>
</form>