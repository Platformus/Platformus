@model Platformus.ECommerce.Backend.ViewModels.Shared.CartViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tr class="table__row">
  <td class="table__cell">@Model.Id</td>
  <td class="table__cell">@Model.Total</td>
  <td class="table__cell">@Model.Created</td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--positive button--minor" href="@(this.Context.Request.CombineUrl("/backend/carts/view/" + this.Model.Id))">@Localizer["View"]</a>
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/carts/delete/@Model.Id');"></a>
  </td>
</tr>