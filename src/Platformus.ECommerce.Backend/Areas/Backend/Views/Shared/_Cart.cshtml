@model Platformus.ECommerce.Backend.ViewModels.Shared.CartViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<table-row>
  <table-cell>@Model.Id</table-cell>
  <table-cell>@Model.Total</table-cell>
  <table-cell>@Model.Created</table-cell>
  <buttons-table-cell>
    <positive-button is-minor="true" href="@(this.Context.Request.CombineUrl("/backend/carts/view/" + this.Model.Id))">@Localizer["View"]</positive-button>
    <delete-button href="/backend/carts/delete/@Model.Id"></delete-button>
  </buttons-table-cell>
</table-row>