@model Platformus.ECommerce.Backend.ViewModels.Shared.CategoryViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="tree__node">
  <div class="tree__node-header">
    <div class="tree__buttons tree__buttons--node-header buttons">
      <a class="buttons__button buttons__button--minor button button--positive button--minor" href="/backend/categories/edit/@Model.Id">@Localizer["Edit"]</a>
      <a class="buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/categories/delete/@Model.Id');"></a>
    </div>
    @Model.Name
  </div>
  <div class="tree__node-content">
    @foreach (var category in this.Model.Categories)
    {
      @Html.Partial("_Category", category)
    }
    <div class="tree__buttons buttons">
      <a class="buttons__button buttons__button--minor button button--positive button--minor" href="/backend/categories/create?owner.id.equals=@Model.Id">@Localizer["Create category"]</a>
    </div>
  </div>
</div>