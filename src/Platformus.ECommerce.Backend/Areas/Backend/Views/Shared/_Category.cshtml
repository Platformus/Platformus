@model Platformus.ECommerce.Backend.ViewModels.Shared.CategoryViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<node>
  <node-header href="/backend/categories/edit/@Model.Id">
    <node-title>
      @Model.Name
    </node-title>
    <node-controls>
      <delete-button href="/backend/categories/delete/@Model.Id" />
    </node-controls>
  </node-header>
  <node-content>
    @foreach (var category in this.Model.Categories)
    {
      <partial name="_Category" for="@category" />
    }
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/categories/create?owner.id.equals=@Model.Id">@Localizer["Create category"]</neutral-button>
    </node-controls>
  </node-content>
</node>