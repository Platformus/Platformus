@model Platformus.ECommerce.Backend.ViewModels.Shared.ProductViewModel
<row href="/backend/products/edit/@Model.Id">
  <cell>@Model.Category.Name</cell>
  <cell is-highlighted="true">@Model.Name</cell>
  <cell>@Model.Units</cell>
  <cell>@Model.Price.ToString("0.00")</cell>
  <row-controls>
    <delete-button href="/backend/products/delete/@Model.Id" />
  </row-controls>
</row>