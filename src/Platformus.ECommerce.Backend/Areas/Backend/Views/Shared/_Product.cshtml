@model Platformus.ECommerce.Backend.ViewModels.Shared.ProductViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row>
  <cell>@Model.Category.Name</cell>
  <cell>@Model.Name</cell>
  <cell>@Model.Units</cell>
  <cell>@Model.Price.ToString("0.00")</cell>
  <buttons-cell>
    <positive-button is-minor="true" href="/backend/products/edit/@Model.Id">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/products/delete/@Model.Id"></delete-button>
  </buttons-cell>
</row>