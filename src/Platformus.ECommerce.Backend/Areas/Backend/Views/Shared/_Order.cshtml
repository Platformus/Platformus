@model Platformus.ECommerce.Backend.ViewModels.Shared.OrderViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row>
  <cell>@Model.Id</cell>
  <cell>@Model.OrderState.Name</cell>
  <cell>@Model.DeliveryMethod.Name</cell>
  <cell>@Model.PaymentMethod.Name</cell>
  <cell>
    <div>@Model.CustomerFirstName @Model.CustomerLastName</div>
    <div>@Model.CustomerPhone</div>
  </cell>
  <cell>@Model.Total.ToString("0.00")</cell>
  <cell>@Model.Created</cell>
  <buttons-cell>
    <positive-button is-minor="true" href="/backend/orders/edit/@Model.Id">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/orders/delete/@Model.Id"></delete-button>
  </buttons-cell>
</row>