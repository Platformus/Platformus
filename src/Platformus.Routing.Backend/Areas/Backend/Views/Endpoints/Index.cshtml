@model Platformus.Routing.Backend.ViewModels.Endpoints.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Endpoints"];
  this.ViewBag.ActiveMenuItem = "endpoints";
}
@section title {
  @ViewBag.Title <span class="master-detail__detail-header-counter">@Model.Grid.Pager.Total</span>
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="@this.Context.Request.CombineUrl("/backend/endpoints/create")">@Localizer["Create endpoint"]</a>
</div>