  </PropertyGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Platformus.Core.Frontend\Platformus.Core.Frontend.csproj" />
    <ProjectReference Include="..\Platformus.ECommerce\Platformus.ECommerce.csproj" />
  </ItemGroup>

</Project>
