@model Platformus.Forms.Frontend.ViewModels.Shared.FieldViewModel
@{
  string dataValRequiredAttribute = this.Model.IsRequired ? " data-val-required=\"\"" : null;
  string dataValMaxLengthMaxAttribute = this.Model.MaxLength == null ? null : " data-val-maxlength-max=\"" + this.Model.MaxLength + "\"";
  string maxLengthAttribute = this.Model.MaxLength == null ? null : " maxlength=\"" + this.Model.MaxLength + "\"";
}
<input class="field__text-box text-box" id="field@(this.Model.Code)" name="field@(this.Model.Code)" type="text" data-field-code="@Model.Code" data-val="true"@Html.Raw(dataValRequiredAttribute)@Html.Raw(dataValMaxLengthMaxAttribute)@Html.Raw(maxLengthAttribute) />