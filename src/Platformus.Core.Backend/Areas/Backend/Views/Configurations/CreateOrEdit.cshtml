@model Platformus.Core.Backend.ViewModels.Configurations.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Configuration"].Value : this.Localizer["Edit Configuration"].Value);
  this.ViewBag.ActiveMenuItem = "configurations";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field for="Code" />
  <single-line-text-field for="Name" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/configurations">@Localizer["Cancel"]</neutral-button>
  </div>
</form>