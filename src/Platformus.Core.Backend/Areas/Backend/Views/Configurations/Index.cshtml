@model Platformus.Core.Backend.ViewModels.Configurations.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Configurations"];
  this.ViewBag.ActiveMenuItem = "configurations";
}
@section title {
  @ViewBag.Title
}
<tree class="master-detail__tree">
  @foreach (var configuration in this.Model.Configurations)
  {
    <partial name="_Configuration" for="@configuration" />
  }
  <tree-node>
    <tree-node-buttons>
      <positive-button is-minor="true" href="/backend/configurations/create">@Localizer["Create configuration"]</positive-button>
    </tree-node-buttons>
  </tree-node>
</tree>