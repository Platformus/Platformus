@model Platformus.Core.Backend.ViewModels.Users.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Users"];
  this.ViewBag.ActiveMenuItem = "users";
}
@section title {
  @ViewBag.Title
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="@this.Context.Request.CombineUrl("/backend/users/create")">@Localizer["Create user"]</a>
</div>