@model Platformus.Core.Backend.ViewModels.Credentials.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Credentials"];
  this.ViewBag.ActiveMenuItem = "users";
}
@section title {
  @ViewBag.Title
}
<partial name="_Grid" for="Grid" />
<div class="master-detail__buttons buttons">
  <positive-button href="/backend/credentials/create?user.id=@Model.Filter.User.Id">@Localizer["Create credential"]</positive-button>
  <neutral-button href="/backend/users">@Localizer["Back"]</neutral-button>
</div>