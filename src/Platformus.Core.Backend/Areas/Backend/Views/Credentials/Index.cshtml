@model Platformus.Core.Backend.ViewModels.Credentials.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Credentials"];
  this.ViewBag.ActiveMenuItem = "users";
}
@section title {
  @ViewBag.Title
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="/backend/credentials/create?user.id=@Model.Filter.User.Id">@Localizer["Create credential"]</a>
  <a class="buttons__button button button--neutral" href="/backend/users">@Localizer["Back"]</a>
</div>