@model Platformus.Core.Backend.ViewModels.Credentials.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Credential"] : this.Localizer["Edit Credential"]);
  this.ViewBag.ActiveMenuItem = "users";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/credentials">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <drop-down-list-field for="CredentialTypeId" options="@Model.CredentialTypeOptions" />
  <single-line-text-field for="Identifier" />
  <secret-field for="Secret" />
  <checkbox-field for="ApplyPbkdf2HashingToSecret" />
</form>