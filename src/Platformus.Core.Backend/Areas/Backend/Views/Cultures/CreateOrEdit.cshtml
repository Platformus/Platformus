@model Platformus.Core.Backend.ViewModels.Cultures.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Culture"] : this.Localizer["Edit Culture"]);
  this.ViewBag.ActiveMenuItem = "cultures";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/cultures">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <single-line-text-field for="Id" disabled="@(!string.IsNullOrEmpty(this.Model.Id))" />
  <single-line-text-field for="Name" />
  <checkbox-field for="IsFrontendDefault" />
  <checkbox-field for="IsBackendDefault" />
</form>