@model Platformus.Core.Backend.ViewModels.Cultures.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Culture"].Value : this.Localizer["Edit Culture"].Value);
  this.ViewBag.ActiveMenuItem = "cultures";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field for="Id" />
  <single-line-text-field for="Name" />
  <checkbox-field class="form__field--separated" for="IsFrontendDefault" />
  <checkbox-field for="IsBackendDefault" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="@this.Context.Request.CombineUrl("/backend/cultures")">@Localizer["Cancel"]</neutral-button>
  </div>
</form>