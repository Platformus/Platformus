@model Platformus.Core.Backend.ViewModels.Variables.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Variable"] : this.Localizer["Edit Variable"]);
  this.ViewBag.ActiveMenuItem = "configurations";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/configurations" skip-url-parameters="configuration.id">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <single-line-text-field for="Code" />
  <single-line-text-field for="Name" />
  <single-line-text-field for="Value" />
  <integer-field for="Position" />
</form>