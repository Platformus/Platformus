@model Platformus.Core.Backend.ViewModels.Variables.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Variable"].Value : this.Localizer["Edit Variable"].Value);
  this.ViewBag.ActiveMenuItem = "configurations";
}
@section title {
@ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field asp-for="Code" />
  <single-line-text-field asp-for="Name" />
  <single-line-text-field asp-for="Value" />
  <numeric-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="/backend/configurations">@Localizer["Cancel"]</a>
  </div>
</form>