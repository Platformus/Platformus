@model Platformus.Core.Backend.ViewModels.Account.ResetPasswordViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{ 
  this.ViewBag.Title = this.Localizer["Reset Password"];
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field for="Email" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Reset  password"]</submit-button>
  </div>
</form>