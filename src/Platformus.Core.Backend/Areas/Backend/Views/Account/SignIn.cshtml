@model Platformus.Core.Backend.ViewModels.Account.SignInViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{ 
  this.ViewBag.Title = this.Localizer["Sign  In"];
}
@section title {
  @ViewBag.Title
}
<form class="master-detail__form form" method="post">
  <single-line-text-field for="Email" />
  <secret-field for="Password" />
  <checkbox-field class="form__field--separated" for="RememberMe" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Sign in"]</submit-button>
  </div>
  <h2 class="form__title">
    @Localizer["Forgot your password?"]
  </h2>
  <div class="form__buttons buttons">
    <neutral-button href="/backend/account/resetpassword">@Localizer["Reset password"]</neutral-button>
  </div>
</form>