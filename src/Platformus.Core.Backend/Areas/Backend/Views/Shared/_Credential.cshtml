@model Platformus.Core.Backend.ViewModels.Shared.CredentialViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<table-row>
  <table-cell>@Model.CredentialType.Name</table-cell>
  <table-cell>@Model.Identifier</table-cell>
  <buttons-table-cell>
    <positive-button is-minor="true" href="@(this.Context.Request.CombineUrl("/backend/credentials/edit/" + this.Model.Id))">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/credentials/delete/@Model.Id"></delete-button>
  </buttons-table-cell>
</table-row>