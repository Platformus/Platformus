@model Platformus.Core.Backend.ViewModels.Shared.ConfigurationViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<node>
  <node-header href="/backend/configurations/edit/@Model.Id">
    <node-title>
      @Model.Name
    </node-title>
    <node-controls>
      <delete-button href="/backend/configurations/delete/@Model.Id" />
    </node-controls>
  </node-header>
  <node-content>
    @foreach (var variable in this.Model.Variables)
    {
      <partial name="_Variable" for="@variable" />
    }
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/variables/create?configuration.id=@Model.Id">@Localizer["Create variable"]</neutral-button>
    </node-controls>
  </node-content>
</node>