@model Platformus.Core.Backend.ViewModels.Shared.ConfigurationViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tree-node>
  <div class="tree__node-header">
    <div class="tree__buttons tree__buttons--node-header buttons">
      <positive-button is-minor="true" href="/backend/configurations/edit/@Model.Id">@Localizer["Edit"]</positive-button>
      <delete-button href="/backend/configurations/delete/@Model.Id"></delete-button>
    </div>
    @Model.Name
  </div>
  <div class="tree__node-content">
    @foreach (var variable in this.Model.Variables)
    {
      @Html.Partial("_Variable", variable)
    }
    <div class="tree__buttons buttons">
      <positive-button is-minor="true" href="/backend/variables/create?configuration.id=@Model.Id">@Localizer["Create variable"]</positive-button>
    </div>
  </div>
</tree-node>