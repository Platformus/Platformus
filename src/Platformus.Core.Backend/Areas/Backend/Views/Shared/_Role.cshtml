@model Platformus.Core.Backend.ViewModels.Shared.RoleViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row>
  <cell>@Model.Name</cell>
  <cell>@(this.Model.Position == null ? "—" : this.Model.Position.ToString())</cell>
  <buttons-cell>
    <positive-button is-minor="true" href="/backend/roles/edit/@Model.Id">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/roles/delete/@Model.Id"></delete-button>
  </buttons-cell>
</row>