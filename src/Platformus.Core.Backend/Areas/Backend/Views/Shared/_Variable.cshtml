@model Platformus.Core.Backend.ViewModels.Shared.VariableViewModel
<node>
  <node-header href="/backend/variables/edit/@Model.Id?configuration.id=@Model.ConfigurationId">
    <node-title>
      @Model.Name =
      @if (this.Model.Value == "yes")
      {
        <span class="marker marker--positive">@Model.Value</span>
      }
      else if (this.Model.Value == "no")
      {
        <span class="marker marker--negative">@Model.Value</span>
      }
      else
      {
        @Model.Value
      }
    </node-title>
    <node-controls>
      <delete-button href="/backend/variables/delete/@Model.Id" />
    </node-controls>
  </node-header>
</node>