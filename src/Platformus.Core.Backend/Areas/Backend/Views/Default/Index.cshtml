@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject Platformus.Core.Backend.Metadata.Providers.IDashboardWidgetsProvider DashboardWidgetsProvider
@{
  this.ViewBag.Title = this.Localizer["Dashboard"];
}
<title-bar />
@foreach (var dashboardWidget in DashboardWidgetsProvider.GetDashboardWidgets(this.Context))
{
  @await Component.InvokeAsync(dashboardWidget.ViewComponentName)
}