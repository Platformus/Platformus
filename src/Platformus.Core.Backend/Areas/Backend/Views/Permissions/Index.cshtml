@model Platformus.Core.Backend.ViewModels.Permissions.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Permissions"];
  this.ViewBag.ActiveMenuItem = "permissions";
}
@section title {
  @ViewBag.Title @*<span class="master-detail__detail-header-counter">@Model.Grid.Pager.Total</span>*@
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="@this.Context.Request.CombineUrl("/backend/permissions/create")">@Localizer["Create permission"]</a>
</div>