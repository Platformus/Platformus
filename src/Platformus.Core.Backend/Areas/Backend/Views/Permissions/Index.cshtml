@model Platformus.Core.Backend.ViewModels.Permissions.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Permissions"];
  this.ViewBag.ActiveMenuItem = "permissions";
}
<title-bar>
  <neutral-button icon="Icons.Create" href="/backend/permissions/create">@Localizer["Create permission"]</neutral-button>
</title-bar>
<filter>
  <text-filter property-path="Name.Contains" label="@Localizer["Name"].Value" />
</filter>
<table sorting="@Model.Sorting">
  <columns>
    <column label="@Localizer["Name"].Value" sorting-property-path="Name" />
    <column label="@Localizer["Position"].Value" sorting-property-path="Position" />
  </columns>
  <rows>
    @foreach (var permission in this.Model.Permissions)
    {
      <partial name="_Permission" for="@permission" />
    }
  </rows>
</table>
<pager offset="@Model.Offset" limit="@Model.Limit" total="@Model.Total" />