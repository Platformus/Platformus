@model Platformus.Core.Backend.ViewModels.Permissions.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Permission"].Value : this.Localizer["Edit Permission"].Value);
  this.ViewBag.ActiveMenuItem = "permissions";
}
@section title {
  @ViewBag.Title
}
<form class="master-detail__form form" method="post">
  <single-line-text-field for="Code" />
  <single-line-text-field for="Name" />
  <numeric-field for="Position" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="@this.Context.Request.CombineUrl("/backend/permissions")">@Localizer["Cancel"]</neutral-button>
  </div>
</form>