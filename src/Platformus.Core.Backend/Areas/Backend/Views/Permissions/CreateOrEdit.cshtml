@model Platformus.Core.Backend.ViewModels.Permissions.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Permission"].Value : this.Localizer["Edit Permission"].Value);
  this.ViewBag.ActiveMenuItem = "permissions";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field asp-for="Code" />
  <single-line-text-field asp-for="Name" />
  <numeric-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/permissions")">@Localizer["Cancel"]</a>
  </div>
</form>