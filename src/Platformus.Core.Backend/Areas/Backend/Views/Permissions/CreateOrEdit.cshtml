@model Platformus.Core.Backend.ViewModels.Permissions.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Permission"] : this.Localizer["Edit Permission"]);
  this.ViewBag.ActiveMenuItem = "permissions";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/permissions">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <single-line-text-field for="Code" />
  <single-line-text-field for="Name" />
  <integer-field for="Position" />
</form>