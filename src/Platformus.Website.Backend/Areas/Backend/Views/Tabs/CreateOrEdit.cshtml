@model Platformus.Website.Backend.ViewModels.Tabs.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Tab"] : this.Localizer["Edit Tab"]);
  this.ViewBag.ActiveMenuItem = "classes";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/tabs">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <single-line-text-field for="Name" />
  <integer-field for="Position" />
</form>