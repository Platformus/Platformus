@model Platformus.Website.Backend.ViewModels.Tabs.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Tabs"];
  this.ViewBag.ActiveMenuItem = "classes";
}
@section title {
  @ViewBag.Title
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="/backend/tabs/create?class.id=@Model.Filter.Class.Id">@Localizer["Create tab"]</a>
  <a class="buttons__button button button--neutral" href="/backend/classes">@Localizer["Back"]</a>
</div>