@model Platformus.Website.Backend.ViewModels.DataSources.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Data Sources"];
  this.ViewBag.ActiveMenuItem = "endpoints";
}
@section title {
  @ViewBag.Title
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="/backend/datasources/create?endpoint.id=@Model.Filter.Endpoint.Id">@Localizer["Create data source"]</a>
  <a class="buttons__button button button--neutral" href="/backend/endpoints">@Localizer["Back"]</a>
</div>