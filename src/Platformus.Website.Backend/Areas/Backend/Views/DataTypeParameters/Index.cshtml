@model Platformus.Website.Backend.ViewModels.DataTypeParameters.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Data Type Parameters"];
  this.ViewBag.ActiveMenuItem = "datatypes";
}
@section title {
  @ViewBag.Title
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="/backend/datatypeparameters/create?datatype.id=@this.Model.Filter.DataType.Id">@Localizer["Create data type parameter"]</a>
  <a class="buttons__button button button--neutral" href="/backend/datatypes">@Localizer["Back"]</a>
</div>