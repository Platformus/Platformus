@model Platformus.Website.Backend.ViewModels.MenuItems.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Menu Item"] : this.Localizer["Edit Menu Item"]);
  this.ViewBag.ActiveMenuItem = "menus";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/menus" skip-url-parameters="menu.id,menuitem.id">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <multilingual-single-line-text-field for="Name" localizations="@Model.NameLocalizations" />
  <single-line-text-field for="Url" />
  <integer-field for="Position" />
</form>