@model Platformus.Website.Backend.ViewModels.Fields.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Field"].Value : this.Localizer["Edit Field"].Value);
  this.ViewBag.ActiveMenuItem = "forms";
}
@section title {
  @ViewBag.Title
}
<form class="master-detail__form form" method="post">
  <drop-down-list-field for="FieldTypeId" options="@Model.FieldTypeOptions" />
  <single-line-text-field for="Code" />
  <multilingual-single-line-text-field for="Name" localizations="@Model.NameLocalizations" />
  <checkbox-field class="form__field--separated" for="IsRequired" />
  <single-line-text-field for="MaxLength" />
  <numeric-field for="Position" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/forms">@Localizer["Cancel"]</neutral-button>
  </div>
</form>