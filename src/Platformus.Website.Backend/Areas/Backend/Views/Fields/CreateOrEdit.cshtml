@model Platformus.Website.Backend.ViewModels.Fields.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Field"] : this.Localizer["Edit Field"]);
  this.ViewBag.ActiveMenuItem = "forms";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/forms" skip-url-parameters="form.id">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <drop-down-list-field for="FieldTypeId" options="@Model.FieldTypeOptions" />
  <single-line-text-field for="Code" />
  <multilingual-single-line-text-field for="Name" localizations="@Model.NameLocalizations" />
  <checkbox-field for="IsRequired" />
  <integer-field for="MaxLength" />
  <integer-field for="Position" />
</form>