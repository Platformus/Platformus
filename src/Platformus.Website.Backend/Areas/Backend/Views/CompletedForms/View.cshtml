@model Platformus.Website.Backend.ViewModels.CompletedForms.ViewViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["View Completed Form"];
  this.ViewBag.ActiveMenuItem = "forms";
}
@section title {
  @ViewBag.Title
}
<div class="form">
  @foreach (var completedField in this.Model.CompletedFields)
  {
    <div class="form__field field">
      <label class="field__label label">@completedField.Field.Name</label>
      <input class="field__text-box text-box" readonly="readonly" type="text" value="@completedField.Value" />
    </div>
  }
  <div class="form__buttons buttons">
    <neutral-button href="@this.Context.Request.CombineUrl("/backend/completedforms")">@Localizer["Back"]</neutral-button>
  </div>
</div>