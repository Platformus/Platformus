@model Platformus.Website.Backend.ViewModels.Members.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Members"];
  this.ViewBag.ActiveMenuItem = "classes";
}
@section title {
  @ViewBag.Title
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <positive-button href="/backend/members/create?class.id=@Model.Filter.Class.Id">@Localizer["Create member"]</positive-button>
  <neutral-button href="/backend/classes">@Localizer["Back"]</neutral-button>
</div>