@model Platformus.Website.Backend.ViewModels.Menus.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Menus"];
  this.ViewBag.ActiveMenuItem = "menus";
}
<title-bar />
<tree>
  @foreach (var menu in this.Model.Menus)
  {
    <partial name="_Menu" for="@menu" />
  }
  <node>
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/menus/create">@Localizer["Create menu"]</neutral-button>
    </node-controls>
  </node>
</tree>