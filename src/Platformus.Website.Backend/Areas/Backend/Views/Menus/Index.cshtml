@model Platformus.Website.Backend.ViewModels.Menus.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Menus"];
  this.ViewBag.ActiveMenuItem = "menus";
}
@section title {
  @ViewBag.Title
}
<tree class="master-detail__tree">
  @foreach (var menu in this.Model.Menus)
  {
    <partial name="_Menu" for="@menu" />
  }
  <tree-node>
    <tree-node-buttons>
      <positive-button is-minor="true" href="/backend/menus/create">@Localizer["Create menu"]</positive-button>
    </tree-node-buttons>
  </tree-node>
</tree>