@model Platformus.Website.Backend.ViewModels.Shared.MenuViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<node>
  <node-header href="/backend/menus/edit/@Model.Id">
    <node-title>
      @Model.Name
    </node-title>
    <node-controls>
      <delete-button href="/backend/menus/delete/@Model.Id" />
    </node-controls>
  </node-header>
  <node-content>
    @foreach (var menuItem in this.Model.MenuItems)
    {
      <partial name="_MenuItem" for="@menuItem" />
    }
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/menuitems/create?menu.id=@Model.Id">@Localizer["Create menu item"]</neutral-button>
    </node-controls>
  </node-content>
</node>