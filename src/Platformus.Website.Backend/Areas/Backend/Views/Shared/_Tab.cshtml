@model Platformus.Website.Backend.ViewModels.Shared.TabViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row href="/backend/tabs/edit/@Model.Id">
  <cell is-highlighted="true">@Model.Name</cell>
  <cell>@(this.Model.Position == null ? "—" : this.Model.Position.ToString())</cell>
  <row-controls>
    <delete-button href="/backend/tabs/delete/@Model.Id" />
  </row-controls>
</row>