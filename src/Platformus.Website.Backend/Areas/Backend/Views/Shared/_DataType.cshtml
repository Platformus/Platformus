@model Platformus.Website.Backend.ViewModels.Shared.DataTypeViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tr class="table__row">
  <td class="table__cell">@Model.StorageDataType</td>
  <td class="table__cell">@Model.Name</td>
  <td class="table__cell"><a href="/backend/datatypeparameters?datatype.id=@Model.Id">@Localizer["Data type parameters"]</a></td>
  <td class="table__cell">@(Model.Position == null ? "—" : Model.Position.ToString())</td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--positive button--minor" href="@(this.Context.Request.CombineUrl("/backend/datatypes/edit/" + Model.Id))">@Localizer["Edit"]</a>
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/datatypes/delete/@Model.Id');"></a>
  </td>
</tr>