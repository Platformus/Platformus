@model Platformus.Website.Backend.ViewModels.Shared.DataTypeViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row>
  <cell>@Model.StorageDataType</cell>
  <cell>@Model.Name</cell>
  <cell>
    <a href="/backend/datatypeparameters?datatype.id=@Model.Id">@Localizer["Data type parameters"]</a>
  </cell>
  <cell>@(Model.Position == null ? "—" : Model.Position.ToString())</cell>
  <buttons-cell>
    <positive-button is-minor="true" href="/backend/datatypes/edit/@Model.Id">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/datatypes/delete/@Model.Id"></delete-button>
  </buttons-cell>
</row>