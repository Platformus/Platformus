@model Platformus.Website.Backend.ViewModels.Shared.PropertyViewModel
@if (this.Model.Member.IsPropertyLocalizable == true)
{
  <multilingual-multiline-text-field id="propertyMember@(this.Model.Member.Id)" label="@Model.Member.Name" localizations="@Model.LocalizedStringValues" />
}
else
{
  <multiline-text-field id="propertyMember@(this.Model.Member.Id)__" label="@Model.Member.Name" value="@Model.NeutralStringValue.Value" />
}