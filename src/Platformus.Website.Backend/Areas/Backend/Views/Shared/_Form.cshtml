@model Platformus.Website.Backend.ViewModels.Shared.FormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<node>
  <node-header href="/backend/forms/edit/@Model.Id">
    <node-title>
      @Model.Name
    </node-title>
    <node-controls>
      @if (this.Model.ProduceCompletedForms)
      {
        <neutral-button is-minor="true" href="/backend/completedforms?form.id=@Model.Id">@Localizer["Completed forms"]</neutral-button>
      }
      <delete-button href="/backend/forms/delete/@Model.Id" />
    </node-controls>
  </node-header>
  <node-content>
    @foreach (var field in this.Model.Fields)
    {
      <partial name="_Field" for="@field" />
    }
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/fields/create?form.id=@Model.Id">@Localizer["Create field"]</neutral-button>
    </node-controls>
  </node-content>
</node>