@model Platformus.Website.Backend.ViewModels.Shared.EndpointViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row href="/backend/endpoints/edit/@Model.Id">
  <cell is-highlighted="true">@Model.Name</cell>
  <cell>@Model.UrlTemplate</cell>
  <cell>@(this.Model.Position == null ? "—" : this.Model.Position.ToString())</cell>
  <row-controls>
    <neutral-button is-minor="true" href="/backend/datasources?endpoint.id=@Model.Id">@Localizer["Data sources"]</neutral-button>
    <delete-button href="/backend/endpoints/delete/@Model.Id" />
  </row-controls>
</row>