@model Platformus.Website.Backend.ViewModels.Shared.EndpointViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row>
  <cell>@Model.Name</cell>
  <cell>@Model.UrlTemplate</cell>
  <cell>@(this.Model.Position == null ? "—" : this.Model.Position.ToString())</cell>
  <cell>
    <a href="/backend/datasources?endpoint.id=@Model.Id">@Localizer["Data sources"]</a>
  </cell>
  <buttons-cell>
    <positive-button is-minor="true" href="/backend/endpoints/edit/@Model.Id">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/endpoints/delete/@Model.Id"></delete-button>
  </buttons-cell>
</row>