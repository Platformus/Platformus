@model Platformus.Website.Backend.ViewModels.Shared.ClassViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<row href="/backend/classes/edit/@Model.Id">
  <cell>@(this.Model.Parent == null ? "—" : this.Model.Parent.Name)</cell>
  <cell is-highlighted="true">@Model.Name</cell>
  <cell>
    @if (this.Model.IsAbstract)
    {
      <span class="marker marker--positive">@Localizer["Yes"]</span>
    }
    else
    {
      <span class="marker marker--neutral">@Localizer["No"]</span>
    }
  </cell>
  <row-controls>
    <neutral-button is-minor="true" href="/backend/tabs?class.id=@Model.Id" do-not-combine-url="true">@Localizer["Tabs"]</neutral-button>
    <neutral-button is-minor="true" href="/backend/members?class.id=@Model.Id" do-not-combine-url="true">@Localizer["Members"]</neutral-button>
    <delete-button href="/backend/classes/delete/@Model.Id" />
  </row-controls>
</row>