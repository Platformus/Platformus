@model Platformus.Website.Backend.ViewModels.Shared.ClassViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tr class="table__row">
  <td class="table__cell">@(this.Model.Parent == null ? "—" : this.Model.Parent.Name)</td>
  <td class="table__cell">@Model.Name</td>
  <td class="table__cell">
    @if (this.Model.IsAbstract)
    {
      <span class="marker marker--positive">@Localizer["Yes"]</span>
    }
    else
    {
      <span class="marker marker--neutral">@Localizer["No"]</span>
    }
  </td>
  <td class="table__cell"><a href="/backend/tabs?class.id=@Model.Id">@Localizer["Tabs"]</a></td>
  <td class="table__cell"><a href="/backend/members?class.id=@Model.Id">@Localizer["Members"]</a></td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--positive button--minor" href="@(this.Context.Request.CombineUrl("/backend/classes/edit/" + this.Model.Id))">@Localizer["Edit"]</a>
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/classes/delete/@Model.Id');"></a>
  </td>
</tr>