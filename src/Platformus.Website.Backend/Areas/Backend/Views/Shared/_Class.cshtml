@model Platformus.Website.Backend.ViewModels.Shared.ClassViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<table-row>
  <table-cell>@(this.Model.Parent == null ? "—" : this.Model.Parent.Name)</table-cell>
  <table-cell>@Model.Name</table-cell>
  <table-cell>
    @if (this.Model.IsAbstract)
    {
      <span class="marker marker--positive">@Localizer["Yes"]</span>
    }
    else
    {
      <span class="marker marker--neutral">@Localizer["No"]</span>
    }
  </table-cell>
  <table-cell>
    <a href="/backend/tabs?class.id=@Model.Id">@Localizer["Tabs"]</a>
  </table-cell>
  <table-cell>
    <a href="/backend/members?class.id=@Model.Id">@Localizer["Members"]</a>
  </table-cell>
  <buttons-table-cell>
    <positive-button is-minor="true" href="@(this.Context.Request.CombineUrl("/backend/classes/edit/" + this.Model.Id))">@Localizer["Edit"]</positive-button>
    <delete-button href="/backend/classes/delete/@Model.Id"></delete-button>
  </buttons-table-cell>
</table-row>