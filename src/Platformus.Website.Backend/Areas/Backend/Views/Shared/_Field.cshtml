@model Platformus.Website.Backend.ViewModels.Shared.FieldViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<node>
  <node-header href="/backend/fields/edit/@Model.Id?form.id=@Model.FormId">
    <node-title>
      @Model.Name <span class="marker marker--neutral">@Model.FieldType.Name</span>
    </node-title>
    <node-controls>
      <delete-button href="/backend/fields/delete/@Model.Id" />
    </node-controls>
  </node-header>
  @if (this.Model.FieldType.Code == "RadioButtonList" || this.Model.FieldType.Code == "DropDownList")
  {
    <node-content>
      @foreach (var fieldOption in this.Model.FieldOptions)
      {
        <partial name="_FieldOption" for="@fieldOption" />
      }
      <node-controls>
        <neutral-button is-minor="true" icon="Icons.Create" href="/backend/fieldoptions/create?field.id=@Model.Id">@Localizer["Create field option"]</neutral-button>
      </node-controls>
    </node-content>
  }
</node>