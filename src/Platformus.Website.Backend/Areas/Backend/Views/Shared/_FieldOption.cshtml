@model Platformus.Website.Backend.ViewModels.Shared.FieldOptionViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tree-node>
  <tree-node-header>
    <tree-node-title>
      @Model.Value
    </tree-node-title>
    <tree-node-buttons>
      <positive-button is-minor="true" href="/backend/fieldoptions/edit/@Model.Id">@Localizer["Edit"]</positive-button>
      <delete-button href="/backend/fieldoptions/delete/@Model.Id"></delete-button>
    </tree-node-buttons>
  </tree-node-header>
</tree-node>