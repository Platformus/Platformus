@model Platformus.Website.Backend.ViewModels.Shared.MemberViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tr class="table__row">
  <td class="table__cell">@Model.Name</td>
  <td class="table__cell">@(this.Model.PropertyDataType == null ? "—" : this.Model.PropertyDataType.Name)</td>
  <td class="table__cell">@(this.Model.RelationClass == null ? "—" : this.Model.RelationClass.Name)</td>
  <td class="table__cell">@(this.Model.Position == null ? "—" : this.Model.Position.ToString())</td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--positive button--minor" href="@(this.Context.Request.CombineUrl("/backend/members/edit/" + this.Model.Id))">@Localizer["Edit"]</a>
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/members/delete/@Model.Id');"></a>
  </td>
</tr>