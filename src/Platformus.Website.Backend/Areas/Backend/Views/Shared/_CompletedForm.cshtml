@model Platformus.Website.Backend.ViewModels.Shared.CompletedFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<tr class="table__row">
  <td class="table__cell">@Model.Form.Name</td>
  <td class="table__cell">@Model.Created.ToString()</td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--neutral button--minor" href="@(this.Context.Request.CombineUrl("/backend/completedforms/view/" + this.Model.Id))">@Localizer["View"]</a>
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/completedforms/delete/@Model.Id');"></a>
  </td>
</tr>