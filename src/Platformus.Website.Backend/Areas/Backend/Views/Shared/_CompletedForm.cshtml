@model Platformus.Website.Backend.ViewModels.Shared.CompletedFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<table-row>
  <table-cell>@Model.Form.Name</table-cell>
  <table-cell>@Model.Created.ToString()</table-cell>
  <buttons-table-cell>
    <positive-button is-minor="true" href="@(this.Context.Request.CombineUrl("/backend/completedforms/view/" + this.Model.Id))">@Localizer["View"]</positive-button>
    <delete-button href="/backend/completedforms/delete/@Model.Id"></delete-button>
  </buttons-table-cell>
</table-row>