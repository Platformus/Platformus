@model Platformus.Website.Backend.ViewModels.Forms.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Forms"];
  this.ViewBag.ActiveMenuItem = "forms";
}
<title-bar />
<tree>
  @foreach (var form in this.Model.Forms)
  {
    <partial name="_Form" for="@form" />
  }
  <node>
    <node-controls>
      <neutral-button is-minor="true" icon="Icons.Create" href="/backend/forms/create">@Localizer["Create form"]</neutral-button>
    </node-controls>
  </node>
</tree>