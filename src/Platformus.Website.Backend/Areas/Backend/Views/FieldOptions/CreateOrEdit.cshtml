@model Platformus.Website.Backend.ViewModels.FieldOptions.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Field Option"] : this.Localizer["Edit Field Option"]);
  this.ViewBag.ActiveMenuItem = "forms";
}
<form class="form" method="post">
  <title-bar>
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/forms" skip-url-parameters="field.id">@Localizer["Cancel"]</neutral-button>
  </title-bar>
  <multilingual-single-line-text-field for="Value" localizations="@Model.ValueLocalizations" />
  <integer-field for="Position" />
</form>