@model Platformus.Website.Backend.ViewModels.FieldOptions.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Field Option"].Value : this.Localizer["Edit Field Option"].Value);
  this.ViewBag.ActiveMenuItem = "forms";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <multilingual-single-line-text-field asp-for="Value" asp-localizations="@Model.ValueLocalizations" />
  <numeric-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="/backend/forms">@Localizer["Cancel"]</a>
  </div>
</form>