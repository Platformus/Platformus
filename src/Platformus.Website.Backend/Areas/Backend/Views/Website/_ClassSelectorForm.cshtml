@model Platformus.Website.Backend.ViewModels.Website.ClassSelectorFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="pop-up-form__header">
  @Localizer["Class Selector"]
</div>
<div class="pop-up-form__content">
  <div class="item-selector-pop-up-form__items">
    <table class="table">
      <tr class="table__row">
        @foreach (var gridColumn in this.Model.GridColumns)
        {
          <th class="table__cell table__cell--header">@gridColumn.DisplayName</th>
        }
      </tr>
      @foreach (var _class in this.Model.Classes)
      {
        <tr class="table__row @(_class.Id == this.Model.ClassId ? "table__row--selected" : null)" data-item-value="@_class.Id">
          <td class="item-selector-pop-up-form__cell table__cell">@(_class.Parent == null ? "—" : _class.Parent.Name)</td>
          <td class="item-selector-pop-up-form__cell table__cell">@_class.Name</td>
        </tr>
      }
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <button class="buttons__button button button--positive" onclick="return platformus.forms.classSelectorForm.select();">@Localizer["Select"]</button>
    <button class="buttons__button button button--neutral" onclick="return platformus.forms.classSelectorForm.hideAndRemove();">@Localizer["Cancel"]</button>
  </div>
</div>