@model Platformus.Website.Backend.ViewModels.Website.FileSelectorFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="pop-up-form__title heading heading--h1">
  @Localizer["File Selector"]
</div>
<div class="pop-up-form__content">
  <div class="item-selector-pop-up-form__items">
    <table class="item-selector-pop-up-form__table">
      <columns>
        <column label="@Localizer["Name"].Value" />
        <column label="@Localizer["Size"].Value" />
      </columns>
      <rows>
        @foreach (var file in this.Model.Files)
        {
          <row class="table__row--interactive" data-item-value="@file.Name">
            <cell>@file.Name</cell>
            <cell>@file.Size</cell>
          </row>
        }
      </rows>
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <positive-button onclick="return platformus.forms.fileSelectorForm.select();">@Localizer["Select"]</positive-button>
    <neutral-button onclick="return platformus.forms.fileSelectorForm.hideAndRemove();">@Localizer["Cancel"]</neutral-button>
  </div>
</div>