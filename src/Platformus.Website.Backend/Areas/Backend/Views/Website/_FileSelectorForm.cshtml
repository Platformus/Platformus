@model Platformus.Website.Backend.ViewModels.Website.FileSelectorFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="pop-up-form__header">
  @Localizer["File Selector"]
</div>
<div class="pop-up-form__content">
  <div class="item-selector-pop-up-form__items">
    <table class="item-selector-pop-up-form__table table">
      <tr class="table__row">
        <th class="table__cell table__cell--header">@Localizer["Name"]</th>
        <th class="table__cell table__cell--header">@Localizer["Size"]</th>
      </tr>
      @foreach (var file in this.Model.Files)
      {
        <tr class="table__row" data-item-value="@file.Name">
          <td class="item-selector-pop-up-form__cell table__cell">@file.Name</td>
          <td class="item-selector-pop-up-form__cell table__cell">@file.Size</td>
        </tr>
      }
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <button class="buttons__button button button--positive" onclick="return platformus.forms.fileSelectorForm.select();">@Localizer["Select"]</button>
    <button class="buttons__button button button--neutral" onclick="return platformus.forms.fileSelectorForm.hideAndRemove();">@Localizer["Cancel"]</button>
  </div>
</div>