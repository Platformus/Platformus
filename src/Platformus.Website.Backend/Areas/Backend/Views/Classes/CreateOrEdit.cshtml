@model Platformus.Website.Backend.ViewModels.Classes.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Class"].Value : this.Localizer["Edit Class"].Value);
  this.ViewBag.ActiveMenuItem = "classes";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <drop-down-list-field asp-for="ClassId" asp-options="@Model.ClassOptions" />
  <single-line-text-field asp-for="Code" />
  <single-line-text-field asp-for="Name" />
  <single-line-text-field asp-for="PluralizedName" />
  <checkbox-field asp-for="IsAbstract" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/classes")">@Localizer["Cancel"]</a>
  </div>
</form>