@model Platformus.Website.Backend.ViewModels.Classes.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Class"].Value : this.Localizer["Edit Class"].Value);
  this.ViewBag.ActiveMenuItem = "classes";
}
@section title {
  @ViewBag.Title
}
<form class="master-detail__form form" method="post">
  <drop-down-list-field for="ClassId" options="@Model.ClassOptions" />
  <single-line-text-field for="Code" />
  <single-line-text-field for="Name" />
  <single-line-text-field for="PluralizedName" />
  <checkbox-field class="form__field--separated" for="IsAbstract" />
  <div class="form__buttons buttons">
    <submit-button>@Localizer["Save"]</submit-button>
    <neutral-button href="/backend/classes">@Localizer["Cancel"]</neutral-button>
  </div>
</form>