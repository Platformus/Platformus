@model Platformus.Navigation.Backend.ViewModels.Shared.MenuItemViewModel
<div class="tree-node">
  <div class="tree-node-header">
    <div class="buttons">
      <a class="button positive" href="/backend/menuitems/edit/@Model.Id">Edit</a>
      <a class="button negative" href="#" onclick="return new Platformus.Overlays.DeleteForm('/backend/menuitems/delete/@Model.Id').show();"></a>
      <div class="clear"></div>
    </div>
    @Model.Name
    <div class="clear"></div>
  </div>
  <div class="tree-nodes">
    @foreach (var menuItem in this.Model.MenuItems)
    {
      @Html.Partial("_MenuItem", menuItem)
    }
    <div class="buttons">
      <a class="button positive" href="/backend/menuitems/create?menuitemid=@Model.Id">Create menu item</a>
      <div class="clear"></div>
    </div>
  </div>
</div>