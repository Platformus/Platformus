@model Platformus.Content.Backend.ViewModels.Members.IndexViewModel
@{
  this.ViewBag.Title = "Members";
  this.ViewBag.ActiveMenuItem = "classes";
}
<h1>@ViewBag.Title <span>@Model.Grid.Pager.Total</span></h1>
@Html.Partial("_Grid", this.Model.Grid)
<div class="buttons">
  <a class="button positive" href="/backend/members/create?classid=@Model.ClassId">Create member</a>
  <a class="button neutral" href="/backend/classes">Back</a>
  <div class="clear"></div>
</div>