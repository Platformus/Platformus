@model Platformus.Website.Frontend.ViewModels.Shared.FieldViewModel
@{
  int index = 0;
}
@foreach (var fieldOption in this.Model.FieldOptions)
{
  index++;
  <span class="field__radio-button">
    <input id="field@(this.Model.Code)Option@(index)" name="field@(this.Model.Code)" type="radio" value="@fieldOption.Value" data-field-code="@Model.Code" />
    <label for="field@(this.Model.Code)Option@(index)">@fieldOption.Value</label>
  </span>
}