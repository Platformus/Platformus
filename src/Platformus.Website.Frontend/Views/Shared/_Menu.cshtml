@model Platformus.Website.Frontend.ViewModels.Shared.MenuViewModel
<div class="menu @Model.AdditionalCssClass">
  <div class="menu__items">
    @foreach (var menuItem in this.Model.MenuItems)
    {
      menuItem.Level = 1;
      <partial name="_MenuItem" for="@menuItem" />
    }
  </div>
</div>