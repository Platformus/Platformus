@model Platformus.Configuration.Backend.ViewModels.Sections.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Section";
  this.ViewBag.ActiveMenuItem = "sections";
}
<h1>@ViewBag.Title</h1>
<form method="post">
  <single-line-text-editor asp-for="Code" />
  <single-line-text-editor asp-for="Name" />
  <div class="buttons">
    <button class="positive" type="submit">Save</button>
    <a class="button neutral" href="/backend/sections">Cancel</a>
    <div class="clear"></div>
  </div>
</form>