@model Platformus.Domain.Backend.ViewModels.Members.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Members"];
  this.ViewBag.ActiveMenuItem = "classes";
}
@section title {
  @ViewBag.Title <span class="master-detail__detail-header-counter">@Model.Grid.Pager.Total</span>
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--positive" href="/backend/members/create?classid=@Model.ClassId">@Localizer["Create member"]</a>
  <a class="buttons__button button button--neutral" href="/backend/classes">@Localizer["Back"]</a>
</div>