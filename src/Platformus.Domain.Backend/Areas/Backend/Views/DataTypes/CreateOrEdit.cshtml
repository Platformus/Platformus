@model Platformus.Domain.Backend.ViewModels.DataTypes.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Data Type"].Value : this.Localizer["Edit Data Type"].Value);
  this.ViewBag.ActiveMenuItem = "datatypes";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <drop-down-list-field asp-for="StorageDataType" asp-options="@Model.StorageDataTypeOptions" />
  <single-line-text-field asp-for="JavaScriptEditorClassName" />
  <single-line-text-field asp-for="Name" />
  <numeric-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/datatypes")">@Localizer["Cancel"]</a>
  </div>
</form>