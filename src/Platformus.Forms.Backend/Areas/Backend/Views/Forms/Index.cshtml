@model Platformus.Forms.Backend.ViewModels.Forms.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Forms"];
  this.ViewBag.ActiveMenuItem = "forms";
}
@section title {
  @ViewBag.Title <span class="master-detail__detail-header-counter">@Model.Forms.Count()</span>
}
<div class="tree">
  @foreach (var form in this.Model.Forms)
  {
    @Html.Partial("_Form", form)
  }
  <div class="tree__node">
    <div class="tree__buttons buttons">
      <a class="buttons__button buttons__button--minor button button--positive button--minor" href="/backend/forms/create">@Localizer["Create form"]</a>
    </div>
  </div>
</div>