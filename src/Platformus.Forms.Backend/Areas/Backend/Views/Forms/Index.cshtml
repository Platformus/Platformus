@model Platformus.Forms.Backend.ViewModels.Forms.IndexViewModel
@{
  this.ViewBag.ActiveMenuItem = "forms";
}
<h1>Forms <span>@Model.Forms.Count()</span></h1>
<div class="tree">
  @foreach (var form in this.Model.Forms)
  {
    @Html.Partial("_Form", form)
  }
  <div class="tree-node">
    <div class="buttons">
      <a class="button positive" href="/backend/forms/create">Create form</a>
      <div class="clear"></div>
    </div>
  </div>
</div>