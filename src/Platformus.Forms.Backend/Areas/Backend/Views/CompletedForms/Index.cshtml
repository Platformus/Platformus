@model Platformus.Forms.Backend.ViewModels.CompletedForms.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["Completed Forms"];
  this.ViewBag.ActiveMenuItem = "forms";
}
@section title {
  @ViewBag.Title <span class="master-detail__detail-header-counter">@Model.Grid.Pager.Total</span>
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="master-detail__detail-buttons buttons">
  <a class="buttons__button button button--neutral" href="/backend/forms">@Localizer["Back"]</a>
</div>