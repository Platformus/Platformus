@model Platformus.Forms.Backend.ViewModels.Shared.FieldViewModel
<div class="tree-node">
  <div class="tree-node-header">
    <div class="buttons">
      <a class="button positive" href="/backend/fields/edit/@Model.Id">Edit</a>
      <a class="button negative" href="#" onclick="return new Platformus.Overlays.DeleteForm('/backend/fields/delete/@Model.Id').show();"></a>
      <div class="clear"></div>
    </div>
    @Model.Name
    <div class="clear"></div>
  </div>
  <div class="tree-nodes">
    @foreach (var fieldOption in this.Model.FieldOptions)
    {
    @Html.Partial("_FieldOption", fieldOption)
    }
    <div class="buttons">
      <a class="button positive" href="/backend/fieldoptions/create?fieldid=@Model.Id">Create field item</a>
      <div class="clear"></div>
    </div>
  </div>
</div>