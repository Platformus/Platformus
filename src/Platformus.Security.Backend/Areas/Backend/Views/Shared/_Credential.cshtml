@model Platformus.Security.Backend.ViewModels.Shared.CredentialViewModel
<tr>
  <td>@Model.CredentialType.Name</td>
  <td>@Model.Identifier</td>
  <td class="buttons">
    <a class="button positive" href="@(this.Context.Request.CombineUrl("/backend/credentials/edit/" + this.Model.Id))">Edit</a>
    <a class="button negative" href="#" onclick="return new Platformus.Overlays.DeleteForm('/backend/credentials/delete/@Model.Id').show();"></a>
    <div class="clear"></div>
  </td>
</tr>