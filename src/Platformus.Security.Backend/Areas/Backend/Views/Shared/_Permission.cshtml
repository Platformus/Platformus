@model Platformus.Security.Backend.ViewModels.Shared.PermissionViewModel
<tr>
  <td>@Model.Name</td>
  <td>@(this.Model.Position == null ? "—" : this.Model.Position.ToString())</td>
  <td class="buttons">
    <a class="button positive" href="@(this.Context.Request.CombineUrl("/backend/permissions/edit/" + this.Model.Id))">Edit</a>
    <a class="button negative" href="#" onclick="return new Platformus.Overlays.DeleteForm('/backend/permissions/delete/@Model.Id').show();"></a>
    <div class="clear"></div>
  </td>
</tr>