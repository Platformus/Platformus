@model Platformus.FileManager.Backend.ViewModels.Shared.FileViewModel
<tr class="table__row">
  <td class="table__cell"><a href="~/files/@Model.Name">@Model.Name</a></td>
  <td class="table__cell">@Model.Size</td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/filemanager/delete/@Model.Id');"></a>
  </td>
</tr>